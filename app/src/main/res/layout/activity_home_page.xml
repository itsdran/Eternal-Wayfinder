<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdddc"
    android:padding="16dp">

    <!-- Outer Box -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Welcome Frame Layout -->
        <FrameLayout
            android:id="@+id/welcome"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/outline"
            android:padding="4dp"> <!-- Padding to create space for the border -->

            <!-- Inner Box with rounded rectangle -->

            <TextView
                android:id="@+id/welcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center"
                android:padding="20dp"
                android:text="Welcome to North Manila Cemetery"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- Centered Image -->
        <ImageView
            android:id="@+id/parkImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:src="@drawable/pin" />

        <!-- English Button -->
        <Button
            android:id="@+id/buttonEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/parkImage"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/holo_red_dark"
            android:text="English"
            android:textColor="@android:color/white" />

        <!-- Tagalog Button -->
        <Button
            android:id="@+id/buttonTagalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonEnglish"
            android:layout_marginTop="16dp"
            android:background="@android:color/holo_red_dark"
            android:text="Filipino"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/leaves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:src="@drawable/leaves" />

        <!-- Uppermost Layer: Leaves Image -->
    </RelativeLayout>

</RelativeLayout>
